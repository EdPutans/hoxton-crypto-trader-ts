{
  "compilerOptions": {
    "module": "esnext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "lib": [
      "es6",
      "dom",
      "ES2020",
      "ESNext"
    ],
    "rootDir": ".",
    "moduleResolution": "node",
    "target": "es5",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ]
}
